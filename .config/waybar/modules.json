{
  "hyprland/language": {
      "format": "{}",
      "format-en": "EN",
      "format-ru": "RU",
      "format-uk": "UA",
  },
  "hyprland/workspaces": {
    "all-outputs": true,
    "active-only": false,
    "on-click": "activate",
    "format": "{icon}",
    "on-hover": false,
    "format-icons": {
      "urgent": "󰑊",
      "active": "",
      "default": "󰑊"
    },
    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": [],
    },
    "tooltip": false,
  },
  "battery": {
    "bat": "BAT0",
    "states": {
      "good": 90,
      "warning": 20,
      "critical": 15
    },
    "format": "{icon}",
    "format-charging": "󰂄",
    "format-full": "󰁹",
    "format-icons": [
      "󰁺",
      "󰁻",
      "󰁼",
      "󰁽",
      "󰁾",
      "󰁿",
      "󰂀",
      "󰂁",
      "󰁹"
    ],
    "tooltip-format": "{timeTo}\n{capacity} % | {power} W"
  },
  "clock": {
    "format": "<b>{:%a %d, %b %I:%M %p}</b>",
    "format-alt": "<b>{:%I:%M %p}</b>",
  },
  "network": {
    "interface": "wlan0",
    "format-icons": [
      "󰤯 ",
      "󰤟 ",
      "󰤢 ",
      "󰤥 "
    ],
    "format-wifi": "󰤨 ",
    "format-alt" : "󰤨  {bandwidthTotalBits}",
    "on-click": "wezterm -e nmtui",
    "on-click-right": "nm-connection-editor",
    "tooltip-format": "{essid} {signalStrength}%",
    "format-disconnected": "󰤮 "
  },
  "tray": {
      "show-passive-items": true,
      "icon-size": 16,
      "spacing": 5,
  },
  "group/power": {
      "orientation": "inherit",
      "drawer": {
          "transition-duration": 500,
          "children-class": "not-power",
          "transition-left-to-right": false,
      },
      "modules": [
          "custom/power",
          "custom/quit",
          "custom/lock",
          "custom/reboot",
      ]
  },
  "custom/power": {
      "format": "",
      "tooltip": false,
      "on-click": "rofi -show power-menu -modi power-menu:~/.config/hypr/scripts/rofi-power-menu"
  }
}
